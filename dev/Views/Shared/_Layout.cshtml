<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fit2Run Analytics</title>
    
    <!-- Bootstrap + FontAwesome for reliable styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    
    <!-- Chart.js for visualizations -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Modern Header -->
    <header class="header-bar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                        <div class="navbar-brand">
                            <i class="fas fa-running"></i>
                            <span class="ms-2">Fit2Run Analytics</span>
                        </div>
                        
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="/dev/"><i class="fas fa-chart-bar"></i> Dashboard</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-dollar-sign"></i> Sales & Revenue
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/dev/Dashboard/RecentOrders"><i class="fas fa-shopping-cart"></i> Recent Orders</a></li>
                                        <li><a class="dropdown-item" href="/dev/Dashboard/Budget"><i class="fas fa-money-bill"></i> Budget</a></li>
                                        <li><a class="dropdown-item" href="/dev/Dashboard/Rankings"><i class="fas fa-trophy"></i> Store Rankings</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-brain"></i> Intelligence
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/dev/Dashboard/Performance"><i class="fas fa-chart-area"></i> Performance</a></li>
                                        <li><a class="dropdown-item" href="/dev/Dashboard/LYComparison"><i class="fas fa-chart-line"></i> LY Comparison</a></li>
                                        <li><a class="dropdown-item" href="/dev/Dashboard/Products"><i class="fas fa-box"></i> Product Intelligence</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/dev/Dashboard/Employees"><i class="fas fa-users"></i> Team</a>
                                </li>
                            </ul>
                            
                            <div class="navbar-text">
                                <span class="badge bg-success" id="health-status">
                                    <i class="fas fa-check-circle"></i> System Health
                                </span>
                            </div>
                        </div>
                    </nav>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                @RenderBody()
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-0">
                        <i class="fas fa-bolt text-warning"></i>
                        Fit2Run Analytics Platform | 
                        <span id="api-status" class="badge bg-success">Online</span>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>